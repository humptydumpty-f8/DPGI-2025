<Window x:Class="_50_Локальне_визначення_стилю.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_50_Локальне_визначення_стилю"
        mc:Ignorable="d"
        Title="Lection 5-0" Height="450" Width="800">
    <Grid >
        <TextBlock xml:space="preserve" TextWrapping="Wrap" VerticalAlignment="Center" Margin="20"  Text=
                   "Панграма – це речення, що містить всі букви абетки. Ось один з прикладів української панграми:
                   &quot;Любий фахівець їздить човном щодня за ґаздуванням&quot;.">
            <TextBlock.Style>
                <Style>
                    <Setter Property="Control.FontFamily" Value="Time New Roman"/>
                    <Setter Property="Control.FontSize" Value="18"></Setter>
                    <Setter Property="Control.FontWeight" Value="Bold"/>
                    <Setter Property="Control.Foreground">
                        <Setter.Value>
                            <LinearGradientBrush>
                                <GradientStop Color="#FF0061FF" Offset="1"/>
                                <GradientStop Color="Brown" Offset="0"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </Grid>
</Window>
